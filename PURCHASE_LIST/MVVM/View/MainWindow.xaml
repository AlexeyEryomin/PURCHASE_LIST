<Window x:Class="PURCHASE_LIST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PURCHASE_LIST" xmlns:viewmodel="clr-namespace:PURCHASE_LIST.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" Text="Список покупок! Поиск по названию списка справа ->"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ListFilter, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Button Content="Добавить список!" CommandParameter="{Binding}" Command="{Binding DataContext.AddItemsListCommand, ElementName=mainList}"/>
            <Button Content="Сохранить всё!" CommandParameter="{Binding}" Command="{Binding DataContext.SaveChangesCommand, ElementName=mainList}"/>
        </StackPanel>
        
        <ListBox Grid.Row="1" Grid.Column="1" x:Name="mainList" ItemsSource="{Binding mainList}" SelectedItem="{Binding SelectedMainList}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Button Content="Удалить список" CommandParameter="{Binding}" Command="{Binding DataContext.RemoveItemsListCommand, ElementName=mainList}"/>
                        <TextBox Text="{Binding ListName}"/>
                        <Button Content="Добавить покупку" CommandParameter="{Binding}" Command="{Binding DataContext.AddCommand, ElementName=itemsList}"/>
                        <ListBox Grid.Row="1" Grid.Column="1" x:Name="itemsList" ItemsSource="{Binding itemsList}" SelectedItem="{Binding SelectedItem}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBox Text="{Binding Path=ItemName}"/>
                                        <Button Content="Удалить Покупку!" CommandParameter="{Binding}" Command="{Binding DataContext.RemoveCommand, ElementName=itemsList}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>        
    </Grid>
</Window>
